<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create new Campground</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="campground[name]" value="<%= campground.name %>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="campground[image]" value="<%= campground.image %>">
                </div>

                <div class="form-group">
                    <textarea class="form-control" placeholder="description" name="<%= campground.description %>"><%= campground.description%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back!</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>

